<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/android_layout_bg"  >

    <FrameLayout
        android:id="@+id/tab1_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/press_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="开启地图定位功能"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/tgbtn_load_img"
                style="@style/FilterToggleButton"
                android:layout_marginRight="@dimen/item_margin_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="55dp"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="开启位置上传服务"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/tgbtn_update"
                style="@style/FilterToggleButton"
                android:layout_marginRight="@dimen/item_margin_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="105dp"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/enter_map"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1.0"
                android:drawableRight="@drawable/right"
                android:ellipsize="end"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:text="进入地图"
                android:textColor="@color/text"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="155dp"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/history_map"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1.0"
                android:drawableRight="@drawable/right"
                android:ellipsize="end"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:text="查看出行历史"
                android:textColor="@color/text"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>